{
    "compilerOptions": {
      "declaration": false,
      "experimentalDecorators": true,
      "lib": [
        "es6",
        "dom"
      ],
      "mapRoot": "./",
      "module": "esnext",
      "moduleResolution": "node",
      "outDir": "../dist/out-tsc",
      "sourceMap": true,
      "target": "ES2022",
      "typeRoots": [
        "../../node_modules/@types"
      ],
      "useDefineForClassFields": false
    },
    "files": [
        "main.ts",
        "polyfills.ts"
    ],
    "include": [
        "./**/*.d.ts",
        "../lib/**/*.ts"
    ],
    "exclude": [
        "./**/*.spec.ts"
    ],
    "angularCompilerOptions": {
        "enableIvy": false
    }
}