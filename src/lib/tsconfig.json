{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "lib": [
            "es2022",
            "DOM"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "../../node_modules/@types"
        ],
        "moduleResolution": "node",
        "skipLibCheck": true,
        "declaration": false,
        "experimentalDecorators": true,
        "sourceMap": true,
        "mapRoot": "./",
        "esModuleInterop": false
    },
    "angularCompilerOptions": {
        "enableIvy": true,
    },
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}