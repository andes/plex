{
    "$schema": "./node_modules/ng-packagr/ng-package.schema.json",
    "dest": "./dist",
    "lib": {
        "entryFile": "src/public-api.ts",
        "styleIncludePaths": [
            "src/lib/css"
        ]
    },
    "assets": [
        "README.md",
        "LICENSE",
        {
            "input": "src/lib/css",
            "glob": "**/*",
            "output": "styles"
        }
    ],
    "allowedNonPeerDependencies": [
        "@andes/icons",
        "@mdi/font"
    ]
}